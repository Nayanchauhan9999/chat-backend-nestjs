generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//User Model
model User {
  id           String    @id @default(uuid())
  firstName    String
  lastName     String
  email        String    @unique
  phone        String    @unique
  password     String
  token        String?
  isDeleted    Boolean   @default(false)
  profileImage String?
  roleId       String?
  createdAt    DateTime  @default(now())
  Room         Room?     @relation(fields: [roomId], references: [id])
  roomId       String?
  Message      Message[]
}

//Otp Model
model Otp {
  id        Int      @id @default(autoincrement())
  otp       Int
  userId    String   @unique
  createdAt DateTime @default(now())
  expireAt  DateTime
}

enum RoleType {
  CUSTOM
  FIXED
}

model Role {
  id         String  @id @default(uuid())
  roleName   String  @unique
  isFixed    Boolean @default(false)
  userCount  Int?    @default(0)
  status     Boolean @default(true)
  permission Json
}

model Message {
  id            String   @id @default(uuid())
  text          String
  senderId      String
  senderDetails User?    @relation(fields: [senderId], references: [id])
  createdAt     DateTime @default(now())
  roomId        String?
  Room          Room[]
}

enum RoomType {
  PRIVATE
  GROUP
  CHANNEL
}

model Room {
  id                  String   @id @default(uuid())
  roomType            RoomType @default(PRIVATE)
  name                String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  unreadMessagesCount Int      @default(0)
  createdBy           String

  users       User[]
  lastMessage Message? @relation(fields: [messageId], references: [id])
  messageId   String?
}
