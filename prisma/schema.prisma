generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//User Model
model User {
  id           String    @id @default(uuid())
  firstName    String
  lastName     String
  email        String    @unique
  phone        String    @unique
  password     String
  token        String?
  isDeleted    Boolean   @default(false)
  profileImage String?
  roleId       String?
  createdAt    DateTime  @default(now())
  Room         Room?     @relation(fields: [roomId], references: [id])
  roomId       String?
  Message      Message[]

  @@index([email])
  @@index([phone])
  @@index([firstName])
  @@index([lastName])
}

//Otp Model
model Otp {
  id        Int      @id @default(autoincrement())
  otp       Int
  userId    String   @unique
  createdAt DateTime @default(now())
  expireAt  DateTime
}

enum RoleType {
  CUSTOM
  FIXED
}

model Role {
  id         String  @id @default(uuid())
  roleName   String  @unique
  isFixed    Boolean @default(false)
  userCount  Int?    @default(0)
  status     Boolean @default(true)
  permission Json
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  AUDIO
  FILE
}

enum MessageStatus {
  SENT
  DELIVERED
  READ
}

model Message {
  id          String        @id @default(uuid())
  text        String?
  senderId    String
  sender      User?         @relation(fields: [senderId], references: [id])
  createdAt   DateTime      @default(now())
  roomId      String?
  Room        Room[]
  messageType MessageType   @default(TEXT)
  isDeleted   Boolean       @default(false)
  status      MessageStatus @default(SENT)
  isEdited    Boolean       @default(false)
  updatedAt   DateTime      @updatedAt
  replyTo     Message?      @relation("MessageReplies", fields: [replyToId], references: [id])
  replyToId   String?
  replies     Message[]     @relation("MessageReplies")

  @@index([roomId])
  @@index([senderId])
}

enum RoomType {
  PRIVATE
  GROUP
  CHANNEL
}

model Room {
  id        String  @id @default(uuid())
  name      String?
  createdBy String
  users     User[]

  roomType            RoomType @default(PRIVATE)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  unreadMessagesCount Int      @default(0)
  isPinned            Boolean  @default(false)

  lastMessage Message? @relation(fields: [messageId], references: [id])
  messageId   String?

  @@index([createdBy, roomType, name])
}
