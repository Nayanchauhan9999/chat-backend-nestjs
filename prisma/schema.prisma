generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//User Model
model User {
  id           String   @id @default(uuid())
  firstName    String
  lastName     String
  email        String   @unique
  phone        String   @unique
  password     String
  isDeleted    Boolean  @default(false)
  profileImage String?
  fcmToken     String?
  createdAt    DateTime @default(now())

  roomMembers RoomMember[]
  Message     Message[]
  tokens      Token[]

  @@index([email])
  @@index([phone])
  @@index([firstName])
  @@index([lastName])
}

//Otp Model
model Otp {
  id        Int      @id @default(autoincrement())
  otp       String
  userId    String   @unique
  createdAt DateTime @default(now())
  expireAt  DateTime

  @@index([userId])
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  AUDIO
  FILE
}

enum MessageStatus {
  SENT
  DELIVERED
  READ
}

model Message {
  id          String        @id @default(uuid())
  text        String?
  senderId    String
  sender      User?         @relation(fields: [senderId], references: [id])
  createdAt   DateTime      @default(now())
  roomId      String
  room        Room          @relation(fields: [roomId], references: [id])
  messageType MessageType   @default(TEXT)
  isDeleted   Boolean       @default(false)
  status      MessageStatus @default(SENT)
  isEdited    Boolean       @default(false)
  updatedAt   DateTime      @updatedAt
  replyTo     Message?      @relation("MessageReplies", fields: [replyToId], references: [id])
  replyToId   String?
  replies     Message[]     @relation("MessageReplies")
  // roomLastMessage Room?

  @@index([roomId])
  @@index([senderId])
}

// Don't use `SELF` anywhere
enum RoomType {
  SELF
  PRIVATE
  GROUP
  CHANNEL
}

// Joint table for room and user
model RoomMember {
  id String @id @default(uuid())

  roomId String
  room   Room   @relation(fields: [roomId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())

  @@unique([roomId, userId])
}

model Room {
  id        String       @id @default(uuid())
  name      String?
  createdBy String
  members   RoomMember[]

  roomType            RoomType @default(PRIVATE)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  unreadMessagesCount Int      @default(0)
  isPinned            Boolean  @default(false)

  // lastMessage Message?  @relation(fields: [messageId], references: [id])
  // messageId   String?
  messages    Message[]

  @@index([createdBy, roomType, name])
}

model Token {
  id String @id @default(uuid())

  token String @unique

  userId String
  user   User   @relation(fields: [userId], references: [id])

  expiredAt DateTime
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt()

  @@index([userId, expiredAt])
}
