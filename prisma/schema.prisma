generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  phone     String   @unique
  password  String
  token     String?
  createdAt DateTime @default(now())
}

model Otp {
  id        Int      @id @default(autoincrement())
  otp       Int
  userId    String
  createdAt DateTime @default(now())
  expireAt  DateTime
}
